.detail-image {
  // width: 100%;
  height: 300rpx;
  object-fit: cover;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.detail-content {
  padding: 32rpx;
}

.dish-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.tags {
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 32rpx;
}

.tag {
  background: #f0f0f0;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.meta-info {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.meta-item {
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.label {
  color: #666;
  font-size: 30rpx;
}

.value {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.recipe-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.recipe-steps {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.step-item {
  flex-direction: row;
  margin-bottom: 24rpx;
}

.step-num {
  color: #07c160;
  font-weight: bold;
  margin-right: 16rpx;
  min-width: 40rpx;
}

.step-text {
  flex: 1;
  font-size: 30rpx;
  line-height: 1.6;
}

.action-buttons {
  margin-top: 48rpx;
}

.edit-btn {
  background: #07c160;
  color: white;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
  border-radius: 8rpx;
}