.container {
  padding: 24rpx;
}

.detail-image {
  height: 300rpx;
  display: block;
  margin: 0 auto;
  object-fit: contain;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.detail-content {
  padding: 32rpx;
}

.dish-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.tag {
  background: #f0f0f0;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}


/* 操作行样式 */
.action-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
}

/* 收藏图标样式 */
.favorite-icon {
  font-size: 46rpx;
  margin-left: 24rpx;
}

/* 评分星星样式 */
.rating {
  display: flex;
}

.star {
  color: #ccc;
  font-size: 46rpx;
  margin-right: 12rpx;
  padding: 0 5rpx;
}

.star.active {
  color: #ffb400;
}

.recipe-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.recipe-steps {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.step-item {
  flex-direction: row;
  margin-bottom: 24rpx;
}

.step-num {
  color: #07c160;
  font-weight: bold;
  margin-right: 16rpx;
  min-width: 40rpx;
}

.step-text {
  flex: 1;
  font-size: 30rpx;
  line-height: 1.6;
}

.action-buttons {
  margin-top: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 30rpx;
}

.edit-btn {
  background: #07c160;
  color: white;
  border-radius: 8rpx;
  flex: 1;
  max-width: 45%;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  flex: 1;
  max-width: 45%;
}