/**random.wxss**/
.container {
  padding: 20rpx;
}

.filter-info {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.filter-info text {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.filter-toggle {
  color: #07c160;
  font-size: 26rpx;
}

/* 筛选面板 */
.filters-panel {
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  width: 100%;
  box-sizing: border-box;
}

/* 评分和收藏在同一行 */
.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.filter-rating {
  flex: 3;
}

/* 评分标题和数值在同一行 */
.rating-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.rating-header text:first-child {
  font-size: 28rpx;
  font-weight: bold;
}

.rating-header text:last-child {
  font-size: 24rpx;
  color: #666;
}

/* 滑块和刻度 */
.rating-slider {
  position: relative;
}

.slider-scales {
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
  margin-top: -5rpx;
}

.slider-scales text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  width: 30rpx;
}

.filter-favorite {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* 标签筛选 */
.tags-container {
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.tags-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: #333;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  margin: 8rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.tag.active {
  background: #07c160;
  color: white;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(7,193,96,0.3);
  transform: scale(1.05);
}

/* 随机推荐按钮 */
.action-bar {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 10rpx;
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
}

.random-btn {
  background: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  width: 80%;
  box-shadow: 0 4rpx 12rpx rgba(7,193,96,0.3);
}

/* 卡片翻转动画 */
.dish-card-container {
  perspective: 1000px;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.dish-card-container.flipping {
  transform: rotateY(180deg);
  animation: flip 0.6s;
}

@keyframes flip {
  0% {
    transform: rotateY(0deg);
    opacity: 1;
  }
  50% {
    transform: rotateY(90deg);
    opacity: 0.5;
  }
  100% {
    transform: rotateY(0deg);
    opacity: 1;
  }
}

/* 菜品卡片样式 */
.result {
  margin-bottom: 120rpx; /* 为底部按钮预留空间 */
}

.dish-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.dish-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
}

.dish-tags text {
  display: inline-block;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.dish-recipe {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin: 16rpx 0;
}

.dish-recipe text {
  display: block;
  margin: 8rpx 0;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.rating {
  display: flex;
}

.star {
  color: #ccc;
  font-size: 36rpx;
  margin-right: 6rpx;
}

.star.active {
  color: #ffb400;
}

.favorite, .edit {
  font-size: 36rpx;
  margin-left: 20rpx;
}