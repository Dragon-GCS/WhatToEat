/**index.wxss**/
.container {
  padding: 20rpx;
}

.add-btn, .random-btn {
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  margin: 0 25rpx;
}

.dish-list {
  height: calc(100vh - 180rpx);
  padding-bottom: 120rpx; /* 为底部操作栏预留空间 */
}

.dish-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
}

.dish-tags text {
  display: inline-block;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.dish-recipe {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.rating {
  display: flex;
}

.star {
  color: #ccc;
  font-size: 36rpx;
  margin-right: 6rpx;
}

.star.active {
  color: #ffb400;
}

.favorite {
  font-size: 36rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.delete {
  color: #ff4d4f;
  font-size: 36rpx;
}

.dish-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.dish-header {
  margin-top: 0;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.dialog-content {
  background: #fff;
  width: 80%;
  border-radius: 16rpx;
  padding: 30rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.close-btn {
  font-size: 40rpx;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.form-group input,
.form-group textarea {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 30rpx;
  background: #07c160;
  color: #fff;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  background: #f9f9f9;
  color: #666;
  font-size: 28rpx;
}
